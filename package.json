{
    "name": "aleph-sdk-ts",
    "version": "1.0.1",
    "description": "Aleph.im Typescript SDK",
    "main": "index.js",
    "scripts": {
        "build": "rm -rf dist/ && yarn tsc",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet",
        "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "test": "yarn test:jest && yarn test:auto",
        "test:jest": "jest --testTimeout=23000 --maxWorkers=2 --verbose",
        "test:auto": "ts-node testsAuto/entryPoint.ts ",
        "pub": "yarn test && yarn lint:fix && yarn build && cp package.json dist/ && cd dist",
        "doc": "typedoc"
    },
    "repository": "git@github.com:aleph-im/aleph-sdk-ts.git",
    "author": "PtitLuca <luca.georges-francois@epitech.eu>",
    "license": "MIT",
    "devDependencies": {
        "@types/elliptic": "^6.4.13",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.25",
        "@types/node-fetch": "^2.6.2",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "arraybuffer-to-string": "^1.0.2",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.5.1",
        "prettier": "^2.6.2",
        "ts-jest": "^27.1.4",
        "typedoc": "^0.22.15",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "@polkadot/keyring": "^7.7.1",
        "@polkadot/util": "^7.7.1",
        "@polkadot/util-crypto": "^7.7.1",
        "@solana/wallet-adapter-base": "^0.9.15",
        "@solana/web3.js": "^1.39.1",
        "@types/bs58": "^4.0.1",
        "@types/ripemd160": "^2.0.0",
        "@types/secp256k1": "^4.0.3",
        "@types/sha.js": "^2.4.0",
        "avalanche": "^3.15.3",
        "axios": "^0.21.4",
        "bip32": "^2.0.6",
        "bip39": "^3.0.4",
        "cypress": "10.6.0",
        "eciesjs": "^0.3.14",
        "ethers": "^5.6.4",
        "form-data": "^4.0.0",
        "sha.js": "^2.4.11",
