{
    "name": "aleph-sdk-ts",
    "version": "1.0.1",
    "description": "Aleph.im Typescript SDK",
    "files": [
        "/dist"
    ],
    "type": "module",
    "workspaces": [
        "packages/accounts/software",
        "packages/accounts/software/*",
        "packages/core/*",
        "packages/messages"
    ],
    "scripts": {
        "clean": "find . -type d -name dist -prune -exec rm -rf {} \\; && find . -name \"*.tsbuildinfo\" -type f -delete",
        "build": "tsc -b tsconfig.build.json",
        "dev": "rm -rf dist/ && tsc -b -v -w -i ",
        "doc": "typedoc",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet",
        "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "prepack": "npm run test && npm run build",
        "test": "npm run test:jest && npm run test:auto",
        "test:jest": "jest --testTimeout=60000 --verbose",
        "test:auto": "ts-node tests/testsAuto/entryPoint.ts "
    },
    "repository": "git@github.com:aleph-im/aleph-sdk-ts.git",
    "author": "Aleph.im",
    "license": "MIT",
    "devDependencies": {
        "@types/bs58": "^4.0.1",
        "@types/elliptic": "^6.4.13",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.25",
        "@types/node-fetch": "^2.6.2",
        "@types/ripemd160": "^2.0.0",
        "@types/secp256k1": "^4.0.3",
        "@types/sha.js": "^2.4.0",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "cypress": "^10.8.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.5.1",
        "prettier": "^2.6.2",
        "ts-jest": "^27.1.5",
        "ts-node": "^10.9.1",
        "typedoc": "^0.22.15",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "form-data": "^4.0.0",
        "sha.js": "^2.4.11",
        "uuid": "^8.3.2"
    }
}
